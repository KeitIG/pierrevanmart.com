.view-cv
    margin-top 10vh
    margin-bottom 10vh
    font-family 'Open Sans'

    ul
        list-style square
        padding-left 1.8rem

    .address
        font-size .875rem
        border solid 1px #EEE
        border-bottom-width 2px

        table
            border-collapse separate
            border-spacing 5px 0

    .name
        font-size 1.9rem

    .role
        font-size 1.7rem

    .myself
        .portrait
            margin-right 1.5rem

            @media (min-width: 768px)
                margin-right 2.5rem

        .image
            float left
            display block
            max-width 100%
            border-radius 50%
            border solid 1px rgba(100, 100, 100, 0.75)
            width 80px

            @media (min-width: 768px)
                width 110px

    .section-title
        margin-top .5rem
        margin-bottom 1.5rem

    .activity:not(:last-child)
        margin-bottom 1rem

    .activity-title
        text-transform uppercase


@media print

    html
        font-size 10px

    ::first-letter
        margin 0
        padding 0

    .view-cv
        margin-top 0
        margin-bottom 0

    .container
        max-width 21cm
