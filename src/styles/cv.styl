.view-cv
    margin-top 10vh
    margin-bottom 10vh
    text-align justify

    ul
        list-style square
        padding-left 1.8rem

    .address
        font-size .875rem

    .name
        font-size 2rem

    .role
        font-size 1.7rem

    .myself
        display block
        max-width 100%
        border-radius 50%
        border solid 1px rgba(100, 100, 100, 0.75)
        width 150px
        margin auto

    .activity-title
        margin-top .5rem
        margin-bottom 1.5rem

    .activity:not(:last-child)
        margin-bottom 1rem


@media print

    html
        font-size 11px

    ::first-letter
        margin 0
        padding 0

    .view-cv
        margin-top 0
        margin-bottom 0

    .container
        max-width 21cm
